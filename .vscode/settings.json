{
    "json.schemas": [
        {
            "fileMatch": ["addon.json"],
            "url": "https://raw.githubusercontent.com/Scirra/Construct-Addon-SDK/main/plugin-sdk/v2/plugin.addon.schema.json"
        },
        {
            "fileMatch": ["aces.json"],
            "url": "https://raw.githubusercontent.com/Scirra/Construct-Addon-SDK/main/plugin-sdk/v2/aces.schema.json"
        },
        {
            "fileMatch": ["**/lang/*.json"],
